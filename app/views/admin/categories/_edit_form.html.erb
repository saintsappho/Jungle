<%= form_with(
  model: @category, 
  url: @category.persisted? ? admin_category_path(@category) : admin_categories_path, 
  method: @category.persisted? ? :patch : :post) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.submit 'Save Category', class: 'btn btn-primary' %>
  </div>
<% end %>