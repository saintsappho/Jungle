<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f|%>
  <div class="textarea">Name: <%=f.text_field :name%></div>
  <div class="textarea">Email: <%=f.text_field :email%></div>
  <div class="pass">Password: <%=f.password_field :password%></div>
  <div class="pass">Password Confirmation: <%=f.password_field :password_confirmation%></div>
  <%= f.submit "Submit"%>
<%end%>