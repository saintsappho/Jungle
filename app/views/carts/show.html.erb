<section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>

  <div class="panel panel-default items">
    <% puts cart_subtotal_cents %>
    <% unless cart_subtotal_cents == 0 %>
      <%= render partial: "cart" %>
      <%= render partial: "button" %>
    <% else %>
      <%= render partial: "empty" %>
    <% end %>
    

</section>
